<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/sytcolor"
        >
        <ImageButton
            android:id="@+id/change_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logotext_back"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textSize="20dp"

            android:textColor="@color/sytcolortext"
            />
        <EditText
            android:id="@+id/change_current_pswd"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:background="@drawable/buyer_question_tv"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="20dp"

            android:layout_marginTop="30dp"
            android:textColor="@color/sytcolortext"
            />
        <EditText
            android:id="@+id/change_new_pswd"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:background="@drawable/buyer_question_tv"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/sytcolortext"
            />
        <EditText
            android:id="@+id/change_confirm_pswd"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:background="@drawable/buyer_question_tv"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/customized_button"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />
    </LinearLayout>
</LinearLayout>
