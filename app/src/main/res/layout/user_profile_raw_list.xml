    android:text="tttt"
    android:textSize="16sp"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/user_charge"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="ccccc"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_height="wrap_content" />
</LinearLayout>
