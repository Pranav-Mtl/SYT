<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    tools:context="com.syt.balram.syt.RegisterScreen">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/registerHeader"
        >
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo"
            android:id="@+id/register_logo"
            />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:layout_below="@id/registerHeader"
            android:id="@+id/registerThinLine"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_below="@id/registerThinLine"
            >
            <TextView
                android:layout_width="fill_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Please Choose an option below"
                />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/register_sell"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/register_sell"
                            />
                       <TextView
                           android:layout_width="10dp"
                           android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/register_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/register_buy_default"
                            />

                        </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                   android:text="Create an Account"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    />
                </LinearLayout>

            <EditText
                android:id="@+id/register_email"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:hint="E-mail"
                android:textColorHint="#9D9D98"
                android:textColor="#000000"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/register_tv"
                />
            <EditText
                android:id="@+id/register_password"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textColorHint="#9D9D98"
                android:paddingLeft="5dp"
                android:hint="Create Password"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/register_tv"
                />
            <Button
                android:id="@+id/register_btn"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp"
                android:text="Get Started"
                android:textColor="#ffffff"
                android:clickable="false"
                android:background="@drawable/register_selector"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="8"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:text="Or Sign up with "
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal"
                >
                   <!--  <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_fb"
                    />-->



                <ImageButton
                    android:id="@+id/btn_google_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_gplus"

                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />
              <com.facebook.widget.LoginButton
                    android:id="@+id/fb_login_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:id="@+id/btn_linked_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_in"

                    />

                <ImageView
                    android:id="@+id/img_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#dedede"
                    android:text="Already have an account ?  "
                    />

                <Button
                    android:id="@+id/register_loginbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#038bcf"
                    android:background="@android:color/transparent"
                    android:text="Login here"
                    />
                </LinearLayout>
            </LinearLayout>

</RelativeLayout>
