<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.syt.balram.syt.FollowerMessage">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#074286"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        >
        <ImageButton
            android:id="@+id/follower_message_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logotext_back"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="7"


        >
        <TextView
            android:id="@+id/followed_name"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/sytcolortext"
            android:textSize="20sp"

            android:gravity="center"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/followed_mesage"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="30dp"
            android:textColor="@color/sytcolortext"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/followed_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/customized_button"
            />
    </LinearLayout>
</LinearLayout>
