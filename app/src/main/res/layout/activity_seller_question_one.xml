<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.syt.balram.syt.SellerQuestionOne">

    <RelativeLayout
        android:id="@+id/buyerHeader1"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="#074286"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/seller_question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logotext_back"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/seller1HeaderMain"
        android:layout_below="@id/buyerHeader1"
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_height="fill_parent">
        <!--<TextView
            android:layout_width="wrap_content"
