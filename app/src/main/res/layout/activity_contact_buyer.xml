<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#074286"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        >
        <ImageButton
            android:id="@+id/contact_buyer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logotext_back"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textSize="18dp"
                android:textColor="@color/sytcolortext"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/contact_buyer_name"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="5dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:background="@drawable/buyer_question_tv"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:layout_marginTop="12dp"
                android:textSize="18dp"
                android:textColor="@color/sytcolortext"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/contact_buyer_email"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:background="@drawable/buyer_question_tv"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mobile no."
                android:textSize="18dp"
                android:textColor="@color/sytcolortext"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/contact_buyer_phone"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="12"
                android:background="@drawable/buyer_question_tv"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Location"
                android:textSize="18dp"
                android:textColor="@color/sytcolortext"
                android:layout_marginLeft="30dp"
                />

            <AutoCompleteTextView
                android:id="@+id/contact_buyer_location"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:background="@drawable/buyer_question_tv"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Enter a brief message"
                android:textSize="15dp"
                android:textColor="@color/sytcolortext"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/contact_buyer_detail"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:gravity="start"
                android:background="#e4e4e4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <Button
                android:id="@+id/contact_buyer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/customized_button"
                android:text="Send Message"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
