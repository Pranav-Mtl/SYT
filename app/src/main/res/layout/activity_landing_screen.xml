<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_bg"
    tools:context=".LandingScreen">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/landing_logo"
                android:layout_gravity="center_horizontal"
                android:id="@+id/landing_logo"
                />

            <TextView  android:layout_width="wrap_content"
                android:id="@+id/landingLineOne"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:text="@string/landing_text_one"
                />

        <TextView  android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/landingLineTwo"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="@string/landing_text_two"
            />
    </LinearLayout>
</RelativeLayout>
