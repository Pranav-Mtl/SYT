<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.syt.balram.syt.EditProfile">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/sytcolor"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:id="@+id/edit_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logotext_back"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:gravity="clip_vertical"
                    android:layout_alignParentLeft="true"
                    />
                <ImageButton
                    android:id="@+id/edit_personal_information"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="17dp"
                    android:textColor="@color/sytcolortext"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:id="@+id/edit_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"

                    android:background="@drawable/buyer_question_tv"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textSize="17dp"
                    android:textColor="@color/sytcolortext"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/edit_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"

                    android:background="@drawable/buyer_question_tv"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location/Address"
                    android:textSize="17dp"
                    android:textColor="@color/sytcolortext"
                    android:layout_marginTop="10dp"/>

                <AutoCompleteTextView
                    android:id="@+id/edit_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:background="@drawable/buyer_question_tv"
                    android:paddingLeft="5dp"

                    android:layout_marginTop="5dp"/>

                <!-- <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Address"
                     android:textSize="17dp"
                     android:textColor="@color/sytcolortext"
                     android:layout_marginTop="10dp"/>
                 <EditText
                     android:id="@+id/edit_address"
                     android:layout_width="wrap_content"
                     android:layout_height="43dp"

                     android:layout_marginTop="5dp"
                     android:paddingLeft="5dp"
                     android:background="@drawable/buyer_question_tv"
                    />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textSize="17dp"
                    android:textColor="@color/sytcolortext"
                    android:layout_marginTop="10dp"/>
                <Button
                    android:id="@+id/edit_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:paddingTop="7dp"
                    android:gravity="start"
                    android:background="@drawable/buyer_question_tv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="17dp"
                    android:textColor="@color/sytcolortext"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"

                    android:background="@drawable/buyer_question_tv"
                    />
                <Button
                    android:id="@+id/edit_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/customized_button"
                    android:text="Update"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"

                    android:textSize="20dp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#696969"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registered Services"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    />
                <ImageButton
                    android:id="@+id/edit_services"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="#e4e4e4"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:gravity="clip_vertical"
                >
                <TextView
                    android:id="@+id/edit_categoryMain"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:text="Trainers and Tutors"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/edit_profile_arrow"
                    android:layout_width="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/left_arrow"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/edit_Layout_category_one"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="#e4e4e4"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:gravity="clip_vertical"
                android:visibility="gone"

                >
                <TextView
                    android:id="@+id/edit_category"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:text="Trainers and Tutors"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/edit_profile_category"
                    android:layout_width="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/left_arrow"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/edit_Layout_category_two"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="#e4e4e4"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:gravity="clip_vertical"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/edit_categoryTwo"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:text="Trainers and Tutors"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <ImageButton
                    android:id="@+id/edit_profile_Two"
                    android:layout_width="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/left_arrow"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
