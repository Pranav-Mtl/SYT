<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#074286"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        >
        <ImageButton
            android:id="@+id/contact_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logotext_back"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="35dp"
                android:text="Name"
                android:textSize="22dp"
                android:textColor="@color/sytcolortext"

                />
            <EditText
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="15dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:background="@drawable/buyer_question_tv"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:layout_marginTop="25dp"
                android:textSize="22dp"
                android:textColor="@color/sytcolortext"

                />
            <EditText
                android:id="@+id/contact_email"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:background="@drawable/buyer_question_tv"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Mobile no."
                android:textSize="22dp"
                android:textColor="@color/sytcolortext"

                />
            <EditText
                android:id="@+id/contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="12"
                android:background="@drawable/buyer_question_tv"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Location"
                android:textSize="22dp"
                android:textColor="@color/sytcolortext"

                />

            <AutoCompleteTextView
                android:id="@+id/contact_location"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:background="@drawable/buyer_question_tv"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Describe your requirement in detail"
                android:textSize="18sp"
                android:textColor="@color/sytcolortext"

                />
            <EditText
                android:id="@+id/contact_detail"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:gravity="start"
                android:background="@drawable/buyer_question_tv"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                >
                <CheckBox
                    android:id="@+id/contact_cb_profiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="Allow another similar profiles to contact me for this requirement "

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <CheckBox
                    android:id="@+id/contact_cb_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="I agree to the terms of service of this service provider regarding his availability, charges and location of delivery"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/contact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/customized_button"
                android:text="Send Message"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="#ffffff"
                />
