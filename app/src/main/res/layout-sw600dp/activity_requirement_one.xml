<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="#ffffff"
    tools:context="com.syt.balram.syt.RequirementOne">

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="50dp"
        android:id="@+id/requirement_one_main"
      android:background="#074286"
      >
        <ImageButton
            android:id="@+id/requirement_one_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logotext_back"
        />

      </LinearLayout>

    <LinearLayout
        android:layout_below="@id/requirement_one_main"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/requirement_one_second"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What services do you need?"
            android:textColor="#074286"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#074286"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"


            />



    </LinearLayout>
    <TextView
        android:id="@+id/requirement_one_line"
        android:layout_width="match_parent"
        android:layout_below="@id/requirement_one_second"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        />

    <ExpandableListView
        android:layout_below="@id/requirement_one_line"
        android:id="@+id/requirement_expandable_list"

        android:layout_width="match_parent"
        android:childDivider="@drawable/child_seperator"

        android:layout_height="wrap_content">

    </ExpandableListView>
</RelativeLayout>
