<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.syt.balram.syt.RequirementSix">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/requirement_one_main"
        android:background="#074286"
        >
        <ImageButton
            android:id="@+id/requirement_six_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logotext_back"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/requirement_one_main"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/requirement_one_second"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you like to be contacted by the service provider?"
            android:textColor="#074286"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"

            />



    </LinearLayout>
    <TextView
        android:id="@+id/requirement_six_line"
        android:layout_width="match_parent"
        android:layout_below="@id/requirement_one_second"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        />

   <RadioGroup
       android:id="@+id/reqsix_group"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_below="@id/requirement_six_line"
       >
       <RadioButton
           android:id="@+id/reqsix_rb1"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:text="By email"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#e4e4e4"
           />

       <RadioButton
           android:id="@+id/reqsix_rb2"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:text="By sms"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#e4e4e4"
           />
       <RadioButton
           android:id="@+id/reqsix_rb3"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:text="Both"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#e4e4e4"
           />
       </RadioGroup>


</RelativeLayout>
