<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.syt.balram.syt.RequirementFive">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/requirement_one_main"
        android:background="#074286"
        >
        <ImageButton
            android:id="@+id/requirement_five_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logotext_back"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/requirement_one_main"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/requirement_one_second"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you like to pay for the service?"
            android:textColor="#074286"
            android:layout_gravity="center"
            android:textSize="25sp"
           android:gravity="center"
            android:layout_marginTop="30dp"

            />




    </LinearLayout>
    <TextView
        android:id="@+id/requirement_five_line"
        android:layout_width="match_parent"
        android:layout_below="@id/requirement_one_second"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        />

    <ListView
        android:layout_below="@id/requirement_five_line"
        android:id="@+id/requirement_five_listview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:divider="#e4e4e4"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:gravity="center"
        android:numColumns="auto_fit" >
    </ListView>

</RelativeLayout>
