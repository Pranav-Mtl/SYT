<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syt.balram.syt.BuyerQuestionFirst">

    <RelativeLayout
        android:id="@+id/buyerHeader1"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:background="#074286"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/buyer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logotext_back"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/Buyer1HeaderMain"
        android:layout_below="@id/buyerHeader1"
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="fill_parent">
