<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context="com.syt.balram.syt.HowItWork"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="5"
        android:orientation="vertical"
        android:background="@drawable/htw_bottom_bg"

        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:gravity="center"
            android:text="SIGN IN AND GET STARTED"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            >

            <Button
                android:id="@+id/htw_signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="Join Now"
                android:textColor="#3b8afd"
                android:background="@drawable/htw_button"
                />
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/htw_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="#3b8afd"
                android:background="@drawable/htw_button"
                />
            </LinearLayout>

       <!-- <Button
            android:id="@+id/htw_skip_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="SKIP"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"
            />-->
                </LinearLayout>
</LinearLayout>
